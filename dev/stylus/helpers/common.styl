html,
body
  font-family $os
body
  overflow-x hidden
  overflow-y scroll
  bgc white

.container
  w 100%
  max-width 1540px
  padding 0 50px
  margin 0 auto
  @media $desktopMin
    padding 0 30px
  &_full
    h 100%
  @media $LandscapeMin
    ml 0
    mr 0
    padding 0 15px
  &_rel
    pos relative

.common
  &__title
    c $dark
    fontify 60px 500 64px
    mb 18px
    @media $lDesktopSmall
      fontify 48px 500 48px
      mb 29px
    @media $desktopMedium
      fontify 40px 500 40px
    @media $PortraitMax
      mb 20px
      br
        dn()
    &_white
      c white
    &_small
      fontify 48px 500 42px
      mb 27px
      @media $lDesktopSmall
        fontify 36px 500 42px
      @media $desktopMinFrom
        fontify 32px 500 36px
  &__subtitle
    c $dark
    fontify 16px 400 24px
    mb 30px
    max-width 340px
    @media $lDesktopSmall
      fontify 14px 400 22px
    @media $PortraitMax
      max-width inherit
      mb 20px
    &_white
      c white
  &__toall
    pos relative
    c $dark
    fontify 16px 500 21px
    border-bottom 1px solid #cecece
    transition .7s border-color, .7s color
    @media $lDesktopSmall
      fontify 14px 500 21px
    &:after
      content ""
      pos absolute
      l calc(100% + 10px)
      b 8px
      size 30px 2px
      bgc $red
      transition .7s width
    &:hover
      c $red
      border-color transparent
      &:after
        w 40px
  &__back
    pos relative
    ib()
    c $dark
    fontify 18px 500 21px
    border-bottom 1px solid #cecece
    ml 39px
    mt 50px
    transition .7s border
    @media $desktopMax
      fontify 16px 700 18px
      mt 34px
    @media $Mobile370
      fontify 14px 500 18px
      ml 29px
    &:before
      content ""
      pos absolute
      l -39px
      t 3px
      size 31px 18px
      background url('data:image/png;base64,') no-repeat center
      @media $desktopMax
        t 1px
      @media $Mobile370
        size 20px 12px
        background-size cover
        t 3px
        l -29px
    &:hover
      border-color transparent
  &__grey
    pos absolute
    z-index -1
    l 0
    t 0
    size 100%
    bgc $grey
    @media $LandscapeMax
      dn()
  &__label
    db()
    c #aeaeb2
    fontify 14px 400 18px
    mb 6px
    @media $lDesktopSmall
      fontify 12px 400 16px
    span 
      c $red
  &__input
    w 100%
    h 44px
    padding 0 20px
    border 1px solid #efefef
    bgc transparent
    color black
    font-family $os
    font-size 16px
    line-height 500
    transition .7s border
    @media $lDesktopSmall
      font-size 14px
    &:focus
      border-color $dark
    &.warning + ^[0]__inperror
      db()
  &__textarea
    padding 7px 20px
    w 100%
    h 125px
    border 1px solid #efefef
    bgc transparent
    color black
    font-family $os
    font-size 16px
    line-height 500
    line-height 25px
    transition .7s border
    resize none
    oh()
    @media $lDesktopSmall
      font-size 14px
      line-height 24px
  &__inperror
    dn()
    c $red
    fontify 12px 400 16px
  &__sbm
    cursor pointer
    font-family $os
    mt 5px
    border-radius 5px
  &__select
    h 36px
    bgc #fff
    border 2px solid #b6b6b6
    w auto
    cursor pointer
    transition .5s border
    &.warning
      border-color #ed1c24
  &__placeholder
    pos absolute
    z-index -1
    l 0 
    t 0
    color alpha(white, .5)
    fontify 13px 400 35px
    letter-spacing .1em
    text-transform uppercase
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    max-width 100%
    transition .7s top, .7s line-height
  &__row
    & + &
      mt 17px
  &__submit
    pos relative
    mt 10px
      
input.warning,
textarea.warning
  border-color $red

input::-webkit-input-placeholder
  color alpha(black, .5)
input::-moz-placeholder
  color alpha(black, .5)
input:-ms-input-placeholder
  color alpha(black, .5)