.decor
  pos absolute
  &__elem
    pos absolute
    animation line 2s ease-in-out infinite
    &:nth-child(2)
      animation-delay .7s
    &:nth-child(3)
      animation-delay 1.4s
    &[data-type="red"]
      bgc $red
    &[data-type="white"]
      bgc white
    &[data-size="small"]
      w 2px
    &[data-size="medium"]
      w 4px
    &[data-size="big"]
      w 10px
    &[data-position="left"]
      l 0
    &[data-position="right"]
      r 0
    &[data-position="middle"]
      l 50%
      transform translateX(-50%)
