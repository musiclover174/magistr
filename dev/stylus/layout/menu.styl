.menu
  @media $desktopMin
    pos fixed
    z-index 11
    t 0
    visibility hidden
    l -100%
    opacity 0
    padding 45px 15px
    w 100%
    h 100%
    transition .7s visibility, .7s left, .7s opacity
    overflow-y auto
  @media $PortraitMin
    padding 40px 30px
  &__list
    dfv(center, flex-start)
    w 100%
  &__item
    pos relative
    w 100%
    text-align center
    padding 0 37px
    @media $lDesktopSmall
      padding 0 15px
    @media $desktopMin
      padding 0
    &_tablet
      w 100%
      @media $PortraitMaxFrom
        dn()
    & + &
      mt 30px
      @media $lDesktopSmall
        mt 20px
      @media $desktopMin
        mt 30px
  &__href
    pos relative
    z-index 1
    color $dark
    fontify 16px 400 19px
    transition .7s color
    @media $lDesktopSmall
      fontify 14px 400 15px
    @media $desktopMin
      transition .7s color
      fontify 24px 600 32px
      c white
