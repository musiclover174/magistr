.news
  &_list
    pb 60px
  &__wrapper
    pos relative
    z-index 2
    padding 78px 0 84px
    @media $lDesktopSmall
      padding 93px 0 113px
    @media $LandscapeMedium
      padding 60px 0 60px
    @media $PortraitMax
      padding 50px 0
  .decor
    l 40%
    t 93%
  &__titleover
    df(flex-end, flex-start)
    mb 25px
    @media $lDesktopSmall
      mb 34px
    @media $PortraitMedium
      justify-content space-between
    .common__title
      mb 0
      mr 52px
      @media $lDesktopSmall
        mr 54px
    .common__toall
      mb 4px
      @media $lDesktopSmall
        mb -1px
      @media $desktopMedium
        mb -3px
      @media $PortraitMedium
        &:after
          dn()
  &__carover
    pos relative
    .swiper-container
      overflow visible
    .swiper-buttons
      @media $PortraitMediumFrom
        pos absolute
        r 0
        t -67px
      @media $PortraitMedium
        margin 30px auto 0
        h 34px
        pos relative
  &__list
    df()
    flex-wrap wrap
    ml -36px
    w calc(100% + 36px)
    mb -57px
    @media $lDesktopSmall
      ml -30px
      w calc(100% + 30px)
    @media $LandscapeMin
      mb -40px
    @media $PortraitMax
      flex-direction column
  &__item
    w 100%
    &_col2
      w calc(50% - 36px)
      ml 36px
      mb 57px
      @media $lDesktopSmall
        w calc(50% - 30px)
        ml 30px
      @media $LandscapeMin
        mb 40px
      @media $PortraitMax
        w calc(100% - 30px)
    &-imgover
      pos relative
      db()
      pt 63%
      overflow hidden
      mb 25px
    &-img
      pos absolute
      l 0
      t 0
      size 100%
      object-fit cover
      font-family 'object-fit: cover;'
      transition 1.5s transform
      will-change transform
      transform scale(1.017) translateZ(0)
    &:hover &-img
      transform scale(1) translateZ(0)
    &-date
      c $red
      fontify 14px 400 21px
      @media $lDesktopSmall
        mb 4px
    &-href
      color $dark
      fontify 30px 500 36px
      border-bottom 1px solid alpha($dark, .2)
      transition .7s border
      @media $lDesktopSmall
        fontify 22px 500 28px
      &:hover
        border-color transparent
    &-dsc
      color $dark
      fontify 16px 500 24px
      mt 13px
      @media $lDesktopSmall
        fontify 14px 400 21px
        mt 15px
  &__elem
    &-date
      c $red
      fontify 14px 400 21px
  &__other
    pos absolute
    z-index 1
    r 40px
    t 50vh
    mt -16px
    size 17px 32px
    @media $lDesktopSmall
      r 15px
    @media $LandscapeMax
      dn()
    &_prev
      l 40px
      @media $lDesktopSmall
        l 15px
      & ^[-1]-href
        transform scaleX(-1)
      & ^[-1]-block
        l 30px
        r auto
      &:hover ^[-1]-block
        r auto
        l 40px
    &-href
      db()
      size 19px 34px
      opacity .2
      background url('data:image/png;base64,') no-repeat center
      transition .7s background, .7s opacity
      &:hover
        opacity 1
        background url('data:image/png;base64,') no-repeat center
    &-block
      pos absolute
      t 50%
      r 30px
      w 335px
      pointer-events none
      bgc white
      border 1px solid #f7f7f7
      padding 20px
      opacity 0
      text-align left
      visibility hidden
      transform translateY(-50%)
      transition .7s opacity, .7s visibility, .7s right, .7s left
      @media $desktopMax
        w 294px
      &:before
        content ""
        pos absolute
        w 30px
        t 0
        r -30px
        h 100%
      & ^[0]__item-imgover
        @media $desktopMax
          mb 16px
      & ^[0]__item-href
        fontify 24px 500 28px
        @media $desktopMax
          fontify 18px 500 20px
      & ^[0]__item-dsc
        font-weight 400
      ^[-1]:hover &
        opacity 1
        visibility visible
        r 40px
        pointer-events all