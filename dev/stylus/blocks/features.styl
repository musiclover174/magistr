.features
  pos relative
  bgc $dark
  t 0
  padding 133px 0 30px
  @media $lDesktopSmall
    padding 101px 0 97px
  @media $LandscapeMin
    padding 61px 0 47px
  @media $PortraitMedium
    padding 45px 0 20px
  .decor
    r 7%
    b -60px
  &__wrapper
    df(flex-start, space-between)
    background url('../i/about-pattern.png') no-repeat center
    pr 167px
    @media $desktopMax
      pr 0
  &__side
    w 420px
    @media $LandscapeMin
      w 100%
  &__list
    db()
    w 173px
    mr 0
    ml auto
    mt 65px
    @media $lDesktopSmall
      mt 70px
    @media $desktopMin
      mt 62px
    @media $LandscapeMax
      ml 69px
      mr auto
    @media $LandscapeMin
      df()
      flex-wrap wrap
      ml -15px
      w calc(100% + 15px)
  &__item
    @media $LandscapeMin
      w calc(50% - 15px)
      ml 15px
      mb 45px
      pl 68px
    @media $PortraitMedium
      w calc(100% - 15px)
    & + &
      mt 59px
      @media $LandscapeMin
        mt 0
    &-title
      pos relative
      c white
      fontify 14px 500 21px
      text-transform uppercase
      letter-spacing .3em
      transition .7s 2.5s opacity, .7s 2.5s right
      @media $lDesktopSmall
        fontify 12px 500 21px
      @media $PortraitMaxFrom
        r 20px
        opacity 0
      &:before
        pos absolute
        content ""
        w 49px
        l -68px
        t 50%
      &[data-type="reliability"]:before
        h 42px
        mt -21px
        background url('data:image/png;base64,') no-repeat center
      &[data-type="quality"]:before
        h 39px
        mt -20px
        background url('data:image/png;base64,') no-repeat center
      &[data-type="reputation"]:before
        h 34px
        mt -17px
        background url('data:image/png;base64,') no-repeat center
  &__slices
    w 317px
    mt 5px
    @media $LandscapeMin
      dn()
  &__slice
    pos relative
    transition .7s .7s margin
    &:nth-child(1)
      z-index 3
      &:before
        b 51px
      &:after
        b 54px
    &:nth-child(2)
      z-index 2
      &:before
        b 56px
      &:after
        b 59px
    &:nth-child(3)
      z-index 1
      &:before
        b 61px
      &:after
        b 64px
    &:before
      content ""
      pos absolute
      l 20px
      size 6px
      border-radius 50%
      bgc white
      transform scale(0)
      will-change transform
      transition .7s 2s transform
    &:after
      content ""
      pos absolute
      bgc alpha($grey, .1)
      w 0
      h 1px
      r calc(100% - 20px)
      transition .7s 2.2s width
    & + &
      mt -185px
    &-img
      max-width 100%
      transition .7s 1.4s margin
  &[visible] 
    @media $PortraitMaxFrom
      & ^[0]__item-title
        r 0
        opacity 1
    & ^[0]__slice 
      &:before
        transform scale(1)
      &:after
        w calc(100vw - 1346px)
        @media $lDesktopSmall
          w calc(100vw - 1216px)
        @media $desktopMax
          w calc(100vw - 1049px)
        @media $desktopMin
          w calc(100vw - 780px)
        @media $LandscapeMax
          w calc(100vw - 630px)
      & + ^[0]__slice 
        mt -151px
      &:nth-child(1) ^[0]__slice-img
        ml -3px
      &:nth-child(2) ^[0]__slice-img
        ml -15px
      &:nth-child(3) ^[0]__slice-img
        ml -30px
