.catalog
  pos relative
  &_list
    pb 95px
    .h-col6
      @media $PortraitMax
        flex 0 0 100%
        max-width 100%
  &__top
    pos relative
    z-index 1
    oh()
    bgc $dark
    mt -106px
    mb 60px
    pt 106px
    pb 90px
    @media $LandscapeMax
      mt -120px
      pt 120px
    @media $PortraitMedium
      pb 60px
    &-bg
      pos absolute
      z-index -1
      t 0
      l 0
      size 100%
      opacity .6
      background-size cover
      background-repeat no-repeat
      background-position top center
    h1:not([class])
      c white
    .breadcrumbs
      c alpha(white, .65)
    .decor
      @media $desktopMax
        dn()
      &_b1
        r 30%
        t -10%
      &_b2
        l 5%
        b -50px
  &__bottom
    pos relative
    z-index 2
  &_main,
  &__bottom
    .decor
      @media $desktopMax
        dn()
      &_b1
        r 10%
        t -7%
      &_b2
        r 20%
        b -30px
  &__docs
    max-width 1070px
    mb 10px
    .financial__list
      pb 0
    &-text
      fontify 17px 400 25px
      max-width 950px
      mb 47px
      @media $desktopMax
        fontify 16px 400 24px
    &-title
      fontify 24px 500 30px
      mb 31px
      @media $PortraitMax
        fontify 20px 500 26px
  &__item
    mb 55px
    &-imgover
      pos relative
      df(center, center)
      h 472px
      mb 17px
      @media $LandscapeMedium
        h 40vw
      @media $PortraitMax
        h 60vw
      border 1px solid #f7f7f7
      perspective 1000px
    &-img
      max-width 80%
      max-height 80%
      transition 1.5s transform
      will-change transform
    &:hover &-img
      transform rotate3d(2, .5, -1.3, 70deg) scale(.9)
    &-href
      color $dark
      fontify 30px 500 36px
      border-bottom 1px solid alpha($dark, .2)
      transition .7s border, .7s color
      @media $lDesktopSmall
        fontify 22px 500 28px
      &:hover
        c $red
        border-color transparent
    &-chars
      mt 11px
    &-char
      df()
      fontify 16px 400 24px
    &-feat
      c #aeaeb2
      w 115px
    &-value
      c $dark