              //-   source(src="video/about.mp4" type="video/mp4")
              +e.bg(src="img/about-bg.jpg")
            .h-col4.h-col_rel.h-anim(data-delay="2")
              +e.info
                +e('p').info-title >20
                  span лет
                +e('p').info-value осуществляем строительство
              +e.info
                +e('p').info-title 15
                +e('p').info-value построенных объектов
