              +e('ul').list
                +e.item
                  +e('p').item-title(data-type="reliability") Надежность
                +e.item
                  +e('p').item-title(data-type="quality") Качество
                +e.item
                  +e('p').item-title(data-type="reputation") Репутация
            +e('aside').slices
              +e.slice
                +e.slice-img(src="img/slice1.png")
              +e.slice
                +e.slice-img(src="img/slice2.png")
              +e.slice
                +e.slice-img(src="img/slice3.png")

      +b('section').types
        section.container
          +e('ul').list
            +e.item.h-anim
              +e.item-href(href="#")
                +e.item-wrapper
                  +e.item-img(src="img/type1.jpg")
                +e.item-name 
                  span 
                    i Коммерческая недвижимость
            +e.item.h-anim(data-delay="1")
              +e.item-href(href="#")
                +e.item-wrapper
                  +e.item-img(src="img/type2.jpg")
                +e.item-name 
                  span 
                    i Продажа<br>квартир
            +e.item.h-anim(data-delay="2")
              +e.item-href(href="#")
                +e.item-wrapper
                  +e.item-img(src="img/type3.jpg")
                +e.item-name 
                  span 
                    i Аренда

      +b('section').objects
        .decor.js-decor(data-type="red", data-height="234", style="width: 33px; height: 234px;")
        +e('span').bg(style="background-image: url('img/objects.jpg')")
        section.container
          .h-wrapper
            .h-col8.h-anim(data-delay="1")
