mixin reqForm(title, dark = '')
  +b('form').ask(class=dark).h-anim
    section.container
      +e('p').title= title
      +e('p').subtitle Обратите внимание, все поля обязательны для заполнения.
      .common__row
        .h-wrapper
          .h-col.h-col4
            label.common__label ФИО
            input.common__input(type="text", data-req="req")
          .h-col.h-col4
            label.common__label Телефон
            input.common__input.js-phone(type="text", data-req="req", data-type="tel")
          .h-col.h-col4
            label.common__label Заявка на просмотр
            select.common__select.js-select(data-req="req", data-type="select")
              option(value="-1", selected, disabled) &nbsp;
              option(value="1") Странновато
              option(value="1") Задавать список заявок
              option(value="1") Еще и в селекте
      .common__row
        .fakecheckbox
          input(type="checkbox", value="", name="agreement", checked)#agreement.fakecheckbox__truecheck
          label(for="agreement").fakecheckbox__label Даю согласие на обработку 
            a(href="#") персональных&nbsp;данных
      .common__row
        img(src="img/captcha.png", style="max-width: 100%;")
      .common__row
        button.common__submit.btn(type="submit") Отправить